@model MerchStore.Application.Products.Commands.CreateProductRequest

@{
	ViewData["Title"] = "Edit Product";
	var id = ViewBag.ProductId;
}

<h2 class="mb-4">Update Product</h2>

<div class="card shadow-sm">
	<div class="card-body">
		<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
			@Html.AntiForgeryToken()

			<!-- Display validation errors here -->
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<input type="hidden" asp-for="Id" />
			<div class="mb-3">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" />
				<div class="text-danger" asp-validation-for="Name"></div>
			</div>

			<div class="mb-3">
				<label asp-for="Description" class="form-label"></label>
				<textarea asp-for="Description" class="form-control" rows="3"></textarea>
				<div class="text-danger" asp-validation-for="Description"></div>
			</div>

			<div class="row">
				<div class="col-md-6 mb-3">
					<label asp-for="Price" class="form-label"></label>
					<input asp-for="Price" class="form-control" />
					<div class="text-danger" asp-validation-for="Price"></div>
				</div>

				<div class="col-md-6 mb-3">
					<label asp-for="StockQuantity" class="form-label"></label>
					<input asp-for="StockQuantity" class="form-control" />
					<div class="text-danger" asp-validation-for="StockQuantity"></div>
				</div>
			</div>

			<div class="mb-3">
				<label asp-for="Category" class="form-label"></label>
				<input asp-for="Category" class="form-control" />
				<div class="text-danger" asp-validation-for="Category"></div>
			</div>

			<div class="mb-3">
				<label asp-for="ImageUrl" class="form-label"></label>
				<input asp-for="ImageUrl" class="form-control" />
				<div class="form-text">Link to product image (optional)</div>
				<div class="text-danger" asp-validation-for="ImageUrl"></div>
			</div>

			<div class="mb-3">
				<label asp-for="Tags" class="form-label">Tags (comma-separated)</label>
				<input name="Tags" class="form-control" />
				<div class="form-text">E.g., hoodie, new, black</div>
			</div>

			<button type="submit" class="btn btn-success">Update Product</button>
			<a asp-action="Index" class="btn btn-outline-secondary ms-2">â†© Back</a>
		</form>
	</div>
</div>