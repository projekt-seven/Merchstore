@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="display-4">Admin Dashboard</h1>
        <p class="lead">Welcome to the administration area.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="alert alert-info">
            <h5>Security Information</h5>
            <p>You are logged in as: <strong>@User.Identity?.Name</strong></p>
            <p>Your role: <strong>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</strong></p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">Manage the product catalog.</p>
                <a asp-action="Products" asp-controller="Admin" class="btn btn-light">View products</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Orders</h5>
                <p class="card-text">View and manage orders.</p>
                <a asp-action="Index" asp-controller="AdminOrders" class="btn btn-light">View orders</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Customers</h5>
                <p class="card-text">View customer registry.</p>
                <a asp-action="Index" asp-controller="AdminCustomers" class="btn btn-light">View customers</a>
            </div>
        </div>
    </div>
</div>
