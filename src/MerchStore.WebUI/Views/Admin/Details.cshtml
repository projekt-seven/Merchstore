@model MerchStore.Application.Products.DTOs.ProductDetailsDto

@{
	ViewData["Title"] = "Product Details";
}

<h1>@Model.Name</h1>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Price:</strong> @Model.Price.ToString("0.00")</p>
<p><strong>Stock:</strong> @Model.StockQuantity</p>
<p><strong>Category:</strong> @Model.Category</p>
@if (Model.ImageUrl is not null)
{
	<img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 300px;" />
}
<p><strong>Tags:</strong> @string.Join(", ", Model.Tags)</p>

<a asp-action="Products" class="btn btn-secondary">Back</a>