@model List<MerchStore.Application.DTOs.CustomerListItemDto>

@{
    ViewData["Title"] = "Customers";
}

<h1 class="mb-4">Customers</h1>

<a asp-action="Create" class="btn btn-success mb-3">âž• Create new customer</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Order Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.OrderCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@customer.Id" method="get" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
