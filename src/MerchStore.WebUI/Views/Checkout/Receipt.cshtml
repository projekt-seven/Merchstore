@model MerchStore.WebUI.Models.Checkout.ReceiptViewModel
@{
    ViewData["Title"] = "Order Receipt";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header color-primary-north">
                    <h3>Thank you for your order!</h3>
                </div>
                <div class="card-body">
                    <h5>Order Receipt</h5>
                    <p><strong>Order ID:</strong> @Model.OrderId</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
                    <p><strong>Name:</strong> @Model.CustomerName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                    <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
                    <hr />
                    <h5>Order Summary</h5>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Price kr</td>
                                            <td>@item.Quantity</td>
                                            <td class="text-end">@item.Total kr</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-end">Total:</th>
                                        <th class="text-end">@Model.Total kr</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div>No items in order.</div>
                    }
                    <div class="mt-4 text-center">
                        <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary-north">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
